<%@ Title="Pembayaran - Mahasiswa Baru"%>
<com:TContent ID="moduleheader">
    <i class="fa fa-usd"></i> Pembayaran Mahasiswa Baru</small>
</com:TContent>
<com:TContent ID="modulebreadcrumb">    
    <li><a href="#">PEMBAYARAN</a></li>
    <li class="active">MAHASISWA BARU</li>     
</com:TContent>
<com:TContent ID="configtools">        
    <%include Application.layouts.cube.OutputReportMode1%>
</com:TContent>
<com:TContent ID="csscontent">
<link rel="stylesheet" type="text/css" href="<%=$this->Theme->baseUrl%>/css/libs/nifty-component.css"/>
</com:TContent>
<com:TContent ID="maincontent">
<com:TPanel Visible="<%= $this->getViewProcess(false) %>" CssClass="row">                    
    <div class="col-lg-12">
        <div class="main-box clearfix">               
            <header class="main-box-header clearfix">
            </header>
            <div class="main-box-body">
                <div class="alert alert-warning">
                    <i class="fa fa-info-circle fa-fw fa-lg"></i>
                    <strong>
                        Info!
                    </strong>
                    <com:TLiteral ID="errorMessage" />
                </div>
            </div>            
        </div>
    </div>
</com:TPanel>
<com:TPanel Visible="<%= $this->getDefaultProcess() %>" CssClass="row">		
    <div class="col-md-12">
        <div class="main-box clearfix">
            <header class="main-box-header clearfix">               
                <h2 class="pull-left"><i class="fa fa-usd"></i> DAFTAR TRANSAKSI</h2>                                     
            </header>        
            <div class="main-box-body clearfix">
                <div class="table-responsive">                
                    <com:TActiveRepeater ID="ListTransactionRepeater" DataKeyField="no_transaksi" OnItemDataBound="dataBoundListTransactionRepeater">
                        <prop:HeaderTemplate>
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr class="bg-teal-700">
                                <th scope="col">NO</th>
                                <th scope="col">NO. BILLING</th>						
                                <th scope="col">NO. FAKTUR<br />BANK</th>
                                <th scope="col">TANGGAL TRANSAKSI</th>			
                                <th scope="col">TANGGAL INPUT</th>			
                                <th scope="col" class="text-right">TOTAL</th>											                                
                            </tr>
                            </thead>
                            <tbody>
                        </prop:HeaderTemplate>
                        <prop:ItemTemplate>
                            <tr>
                                <td><%#$this->DataItem['no']%></td>
                                <td><%#$this->DataItem['no_transaksi']%></td>						
                                <td><%#$this->DataItem['no_faktur']%></td>											
                                <td><%=$this->Page->TGL->tanggal('l, j F Y',$this->DataItem['tanggal'])%></td>	
                                <td><%=$this->Page->TGL->tanggal('l, j F Y',$this->DataItem['date_added'])%></td>	
                                <td class="text-right"><%#$this->Page->Finance->toRupiah($this->DataItem['total'])%></td>					                                
                            </tr>
                        </prop:ItemTemplate>                    
                        <prop:FooterTemplate>
                            </tbody>
                            <tfoot>						
                                <tr Align="right">
                                    <td colspan="5"><b>Total</b></td>							
                                    <td><%#$this->Page->Finance->toRupiah(CPembayaranMahasiswaBaru::$TotalSudahBayar)%></td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr Align="right">
                                    <td colspan="5"><b>Kewajiban Mahasiswa</b></td>							
                                    <td><%#$this->Page->Finance->toRupiah(CPembayaranMahasiswaBaru::$KewajibanMahasiswa)%></td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr Align="right">
                                    <td class="rounded-foot-left" colspan="5"><b>Sisa</b></td>							
                                    <td><%#$this->Page->Finance->toRupiah(CPembayaranMahasiswaBaru::$KewajibanMahasiswa-CPembayaranMahasiswaBaru::$TotalSudahBayar)%></td>
                                    <td class="rounded-foot-right">&nbsp;</td>
                                </tr>
                                </tfoot>
                            </table>
                        </prop:FooterTemplate>
                        <prop:EmptyTemplate>                       
                            <div class="panel-body">
                                <div class="alert alert-info alert-styled-left alert-bordered">
                                    <span class="text-semibold">Info!</span>
                                    Belum ada data yang bisa ditampilkan.
                                </div>                
                            </div>       
                        </prop:EmptyTemplate>
                    </com:TActiveRepeater>
                </div>            
            </div>            
        </div>
    </div>
</com:TPanel>
<%include Application.layouts.limitless.ModalMessageError%>
</com:TContent>